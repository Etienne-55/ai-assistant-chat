{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

